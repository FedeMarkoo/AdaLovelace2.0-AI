<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-mapping>

	<class name="BaseDeDatos.MapeoAcciones" table="Acciones">
		<id column="objeto" name="objeto" type="string" />
		<property column="accion" name="accion" type="string" />
	</class>
	
	<class name="BaseDeDatos.MapeoObjetos" table="Objetos">
		<id column="objeto" name="objeto" type="string" />
		<property column="cantidadDeLlamados" name="cantidadDeLlamados" type="int" />
	</class>
		
	<class name="BaseDeDatos.MapeoDiccionario" table="Diccionario">
		<id column="palabra" name="palabra" type="string" />
		<property column="tipo" name="tipo" type="string" />
	</class>
	
</hibernate-mapping> 